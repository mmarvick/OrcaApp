{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react-native",
        "lib": [ "es2015" ],
        "noEmit": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "allowJs": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "types": [
            "react",
            "react-native",
            "react-navigation",
            "jest"
        ]
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "__tests__/",
        "node_modules"
    ]
}